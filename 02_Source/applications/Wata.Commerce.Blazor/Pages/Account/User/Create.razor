@page "/account/user/create"

@using Wata.Commerce.Common.Helpers;
@using Wata.Commerce.Common.Component;
@using Wata.Commerce.Account.Module.Services;
@using Wata.Commerce.Account.Module.Models.User;

@inherits PageBase
@inject IUserService _userService
@inject NavigationManager Navigation
@inject IPageHelper PageHelper

@if (User is not null)
{
    <UserForm Busy="@Busy" 
                   User="@User" 
                   IsAdd="true"
                   CancelRequest="Cancel"
                   ValidationResult="@(async (success) => await ValidationResultAsync(success))" />
}
@if (Success)
{
    <br />
    <div class="alert alert-success">The user was successfully added.</div>
}
@if (Error)
{
    <br />
    <div class="alert alert-danger">Failed to add the user (@ErrorMessage).</div>
}

@code {
    /// <summary>
    /// New <see cref="User"/>.
    /// </summary>
    private UserModel? User { get; set; }

    /// <summary>
    /// <c>True</c> when an asynchronous operation is running.
    /// </summary>
    private bool Busy;

    /// <summary>
    /// <c>True</c> after successful add.
    /// </summary>
    private bool Success;

    /// <summary>
    /// <c>True</c> when an error occurred.
    /// </summary>
    private bool Error;

    /// <summary>
    /// The error message
    /// </summary>
    private string ErrorMessage = string.Empty;

    /// <summary>
    /// Start with fresh <see cref="User"/>.
    /// </summary>
    /// <returns>A <see cref="Task"/>.</returns>
    protected override Task OnInitializedAsync()
    {
        User = new();
        return base.OnInitializedAsync();
    }

    /// <summary>
    /// Respond to a forms submission.
    /// </summary>
    /// <param name="success"><c>True</c> when valid.</param>
    /// <returns>A <see cref="Task"/>.</returns>
    private async Task ValidationResultAsync(bool success)
    {
        if (Busy)
        {
            return;
        }

        if (!success)
        {
            Success = false;
            Error = false;
            return;
        }

        Busy = true;

        try
        {
            UserModel? newUser = await _userService.InsertUserAsync(User);

            if (newUser != null)
            {
                Success = true;
                Error = false;
                // ready for the next
                User = new UserModel();
                Busy = false;
            }
            else
            {
                Success = false;
                Error = true;
                Busy = false;
            }

        }
        catch (Exception ex)
        {
            Success = false;
            Error = true;
            ErrorMessage = ex.Message;
            Busy = false;
        }
    }

    /// <summary>
    /// Back to list.
    /// </summary>
    private void Cancel()
    {
        Navigation.NavigateTo($"/account/user/{PageHelper.Page}");
    }
}